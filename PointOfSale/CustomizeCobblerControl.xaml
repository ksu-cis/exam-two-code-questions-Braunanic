<UserControl x:Class="ExamTwoQuestions.PointOfSale.CustomizeCobblerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamTwoQuestions.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock FontSize="50" VerticalAlignment="Center" HorizontalAlignment="Center"> Customize Cobbler</TextBlock>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Name ="BlueberryButton" Margin="40,0,40,0" Height="50" Width="100" FontSize="20" Click="BlueberryButton_Click">Blueberry</Button>
                <Button Name="PeachButton" Margin="40,40,40,40" Height="50" Width="100"  FontSize="20">Peach</Button>
                <Button Name="CherryButton" Width="100" Margin="40,0,40,0" Height="50"  FontSize="20">Cherry</Button>
            </StackPanel>
            <Viewbox Height="50">
                <CheckBox IsChecked="{Binding Path=WithIceCream}" >Ice Cream</CheckBox>
            </Viewbox>
        </StackPanel>
    </Grid>
</UserControl>
